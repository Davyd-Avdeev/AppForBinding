<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="bindingObjectStyle" TargetType="{x:Type ContentControl}">
        <Setter Property="Height" Value="30"/>
        <Setter Property="Margin" Value="5"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Orientation="Horizontal">
                        <CheckBox x:Name="ChName" Width="24" Height="24" VerticalAlignment="Top"  Style="{DynamicResource CheckBoxLarge}" Margin="5,0,5,0"/>
                        <ComboBox Width="120" Height="24" VerticalAlignment="Top" Margin="5,0,5,0"/>
                        <TextBox Width="120" Height="24" VerticalAlignment="Top" Margin="5,0,5,0"/>
                        <TextBox Width="120" Height="24" VerticalAlignment="Top" Margin="5,0,5,0"/>
                        <ComboBox Width="120" Height="24" VerticalAlignment="Top" Margin="5,0,5,0"/>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>